<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="edt_style_1">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textColorHint">@color/silver</item>
        <item name="android:backgroundTint">@color/gray</item>
    </style>

    <style name="txt_header_1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@color/cyan</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">@color/gray</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="txt_pageNumber_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:shadowColor">@color/gray</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="txt_textStyle_1">
        <item name="android:textColor">@color/cyan</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="btn_style_1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:shadowColor">@color/gray</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="edtMultiLine_style_1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">198dp</item>
        <item name="android:background">@color/platinum</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">start|top</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textColorHint">@color/silver</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>